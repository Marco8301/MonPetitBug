{{ form_start(form, {'attr': {'id': 'bug-form'}}) }}

<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-12 col-md-7 col-lg-10">
                <div class="form-floating">
                    {{ form_widget(form.title) }}
                    {{ form_label(form.title) }}
                </div>
            </div>
            <div class="col-12 mt-2 col-md-5 col-lg-2 mt-md-0">
                {{ form_widget(form.application) }}
                {{ form_errors(form.application) }}
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-3 mt-2">
                {{ form_widget(form.userKind) }}
            </div>
            <div class="col-12 col-md-7 mt-2">
                <div class="form-floating">
                    {{ form_widget(form.url) }}
                    {{ form_label(form.url) }}
                </div>
            </div>
            <div class="col-12 col-md-2 mt-2">
                <div class="form-floating">
                    {{ form_widget(form.accountId) }}
                    {{ form_label(form.accountId) }}
                </div>
            </div>
        </div>
    </div>
</div>
<hr class="text-primary my-3">
<div class="col-12 ">
    {{ form_row(form.content) }}
</div>
{{ include('common/_form_submit.html.twig', {buttonLabel}) }}
{{ form_end(form) }}

{{ include('bug/_attachment_widget.html.twig', {bug}) }}
