<div class="row">
    <div class="col z-0">
        <div class="text-start">
            <span class="h5">{{ bug.title }}</span>
        </div>
        <div class="text-start">
            <span class="fw-bolder text-decoration-underline">Remont√© par :</span>
            <small>{{ bug.user.userIdentifier }}</small>
            <br/>
            <span class="fw-bolder text-decoration-underline">Le :</span>
            <small>{{ bug.createdAt|date("d/m/Y") }}</small>
        </div>
