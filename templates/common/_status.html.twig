<div class="z-2 mt-2">
    {% if request.isDone %}
        <span class="badge text-success border border-success">{{ 'solved'|trans }}</span>
    {% else %}
        {% if request.assignee %}
            <span class="badge text-warning border border-warning"
                  data-bs-toggle="tooltip"
                  data-bs-placement="left"
                  title="TraitÃ© par {{ request.assignee.fullName }}">
            <i class="fa fa-hourglass-1"></i>
            {{ 'pending'|trans }}
        </span>
        {% else %}
            <span class="badge border border-warning text-warning">
            <i class="fa fa-hourglass-1"></i>
            {{ 'pending_take_over'|trans }}
        </span>
        {% endif %}
    {% endif %}
</div>
